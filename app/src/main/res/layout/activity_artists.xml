<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <LinearLayout android:id="@+id/artistsList"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/artists_info"
            style="@style/explanationText" />

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist1">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView"
                    android:text="Artist Name 1"
                    style="@style/artistName" />

            </RelativeLayout>

            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist2">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView2"
                    android:text="Artist Name 2"
                    style="@style/artistName" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist3">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView3"
                    android:text="Artist Name 3"
                    style="@style/artistName" />
            </RelativeLayout>

            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist4">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView4"
                    android:text="Artist Name 4"
                    style="@style/artistName" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist5">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView5"
                    android:text="Artist Name 5"
                    style="@style/artistName" />
            </RelativeLayout>

            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist6">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView6"
                    android:text="Artist Name 6"
                    style="@style/artistName" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist7">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView7"
                    android:text="Artist Name 7"
                    style="@style/artistName" />
            </RelativeLayout>

            <RelativeLayout style="@style/grayBox"
                android:id="@+id/artist8">
                <ImageView
                    android:src="@drawable/artist"
                    style="@style/transparentBox" />
                <TextView
                    android:id="@+id/textView8"
                    android:text="Artist Name 8"
                    style="@style/artistName" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>